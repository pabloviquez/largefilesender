{
  "manifest_version": 2,
  "name": "LargeFileSender",
  "version": "1.0",

  "description": "Share large files without prying eyes.",

  "icons": {
    "48": "img/48.png",
    "32": "img/32.png",
    "16": "img/16.png"
  },

 "permissions": [
    "tabs"
  ],

 "browser_action": {
    "default_icon": "img/64.png",
    "default_title": "Send File"
  },

  "background": {
    "scripts": ["background.js"]
  }
}